<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <context-param>
        <param-name>context</param-name>
        <param-value>testContext</param-value>
    </context-param>


    <servlet>
        <servlet-name>servletTest</servlet-name>
        <servlet-class>com.chhoyun.ServletTest</servlet-class>

        <init-param>
            <param-name>username</param-name>
            <param-value>张三</param-value>
        </init-param>
    </servlet>


    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.chhoyun.controller.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userServlet</servlet-name>
        <servlet-class>com.chhoyun.controller.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisPatherServlet</servlet-name>
        <servlet-class>com.chhoyun.request.DisPatherServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.chhoyun.controller.RegisterServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DisPatherServlet</servlet-name>
        <url-pattern>/dispather</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>userServlet</servlet-name>
        <url-pattern>/loginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>servletTest</servlet-name>
        <url-pattern>/servletTest</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>encodingFilter</filter-name>
        <filter-class>com.chhoyun.filter.EncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>encodingFilter</filter-name>
        <url-pattern>/encodingCode/*</url-pattern>
    </filter-mapping>
    
    <listener>
        <listener-class>com.chhoyun.listener.MyListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.chhoyun.listener.MyAttributeLister</listener-class>
    </listener>
    
</web-app>